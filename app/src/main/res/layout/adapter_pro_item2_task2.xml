<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="10dp"
    android:background="@color/white2"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pro_item2_task2_iv_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pro_item2_task2_ll_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/pro_item2_task2_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/pro_text"
                android:padding="8dp"
                android:textSize="@dimen/text_size_item2"
                tools:text="ç”»logo" />

            <TextView
                android:id="@+id/pro_item2_task2_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="@color/pro_text"
                android:textSize="@dimen/text_size_item2"
                tools:text="2015-11-28" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray_lin" />
    </LinearLayout>

</LinearLayout>