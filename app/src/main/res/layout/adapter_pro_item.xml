<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pros_item_iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/pros_item_iv_hasnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pros_item_iv_pic"
        android:padding="5dp"
        android:src="@mipmap/close_iv" />

    <TextView
        android:id="@+id/pros_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pros_item_iv_pic"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColor="@color/cal_text" />
</RelativeLayout>