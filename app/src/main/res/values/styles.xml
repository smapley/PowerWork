<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyBaseAppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyBaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/default_text</item>
        <item name="colorPrimaryDark">@color/default_text</item>
        <item name="colorAccent">@color/default_text</item>
        <item name="android:textColorPrimary">@color/default_text</item>
    </style>

    <style name="pop_voice">
        <item name="android:windowEnterAnimation">@anim/pop_voice_in</item>
        <item name="android:windowExitAnimation">@anim/pop_voice_out</item>
    </style>

    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cal_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="account_tv_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/cal_text</item>
    </style>

    <style name="account_et_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:lines">1</item>
        <item name="android:enabled">false</item>
    </style>


    <style name="main_iv_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="per_name_expanded">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="per_name_collapsed">
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="per_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="per_tv_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="per_tv_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="per_ll_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="ach_tv_type">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cal_text</item>
    </style>

    <style name="ach_tv_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ach_tv_number_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cal_text</item>
    </style>

    <style name="per_iv_task_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="main_add_tv_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="main_add_ll_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="main_add_iv_pic">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="add_iv_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

</resources>
